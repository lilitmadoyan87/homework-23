<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{{>menu}}
<h1 class="text-success">Add Train</h1>
<form action="/addTrain" method="post" class="form-control container bg-success text-center">
    <input type="text" name="train_number" placeholder="Enter train number" class="form-control">
    {{#if error}}
    <p>{{error.train_number}}</p>
    {{/if}}
    <input type="text" name="passengers_count" placeholder="Enter passengers max count" class="form-control">
    {{#if error}}
    <p>{{error.passengers_count}}</p>
    {{/if}}
    <select name="from_country">
        <option value="">Select departure city</option>
        {{#each city}}
        <option value={{this}}>{{this}}</option>
        {{/each}}
    </select>
    {{#if error}}
    <p>{{error.from_country}}</p>
    {{/if}}
    <select name="to_country">
        <option value="">Select destination</option>
        {{#each city}}
        <option value={{this}}>{{this}}</option>
        {{/each}}
    </select>
    {{#if error}}
    <p>{{error.to_country}}</p>
    {{/if}}
    <input type="text" name="start_time" placeholder="Enter departure time" class="form-control">
    {{#if error}}
    <p>{{error.start_time}}</p>
    {{/if}}
    <input type="text" name="ticket_price" placeholder="Enter ticket price" class="form-control">
    {{#if error}}
    <p>{{error.ticket_price}}</p>
    {{/if}}
    <button class="btn btn-light text-success">Save</button>
</form>