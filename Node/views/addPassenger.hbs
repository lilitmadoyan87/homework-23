<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{{>menu}}
<h1 class="text-success">Add Passenger</h1>
<form action="/addPassenger" method="post" class="form-control container bg-success text-center">
    <input type="text" name="name" placeholder="Enter your name" class="form-control">
    {{#if error}}
    <p>{{error.name}}</p>
    {{/if}}
    <input type="text" name="phone" placeholder="Enter phone number" class="form-control">
    {{#if error}}
    <p>{{error.phone}}</p>
    {{/if}}
    <select name="trainId">
        <option value="">Select train</option>
        {{#each train}}
        <option value={{id}}>{{train_number}}</option>
        {{/each}}
    </select>
    {{#if error}}
    <p>{{error.trainId}}</p>
    {{/if}}
    <button class="btn btn-light text-success">Save</button>
</form>